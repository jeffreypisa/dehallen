{% set sectionno = '0' %}

{% for item in post.get_field('Sectie') %}

  {% set sectionno = sectionno + '1' %}
  
  {% if item.acf_fc_layout == 'content' %}
		{% include 'pagebuilder/content.twig' %}
		
  {% elseif item.acf_fc_layout == 'content-3kolom' %}
		{% include 'pagebuilder/content-3kolom.twig' %}
		
  {% elseif item.acf_fc_layout == 'pageheader' %}
		{% include 'pagebuilder/pageheader.twig' %}
    
  {% elseif item.acf_fc_layout == 'slider' %}
    {% include 'pagebuilder/slider.twig' %}
  
  {% elseif item.acf_fc_layout == 'blocks' %}
    {% include 'pagebuilder/blocks.twig' %}

  {% elseif item.acf_fc_layout == 'eventfilter' %}
    {% include 'pagebuilder/eventfilter.twig' %}
    
  {% elseif item.acf_fc_layout == 'klapuit' %}
    {% include 'pagebuilder/klapuit.twig' %}
    
  {% elseif item.acf_fc_layout == 'events' %}
    {% include 'pagebuilder/events.twig' %}
		
  {% elseif item.acf_fc_layout == 'quote' %}
		{% include 'pagebuilder/quote.twig' %}
  {% endif %}
  
{% endfor %}