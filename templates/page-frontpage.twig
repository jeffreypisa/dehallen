{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
	  <section class="mod-filterbar">
      <div class="container d-none d-md-block">
        <div class="row">
          <div class="col-md-14 offset-md-3">
            <div class="row">
              {% for item in cat %}
                {% if item.get_posts|length > 0 %}
                  <div class="col">
                    <div class="{{ item.slug }} {% if category.slug == item.slug %} active {% endif %}">
                      <a href="{{ item.link }}">{% include theme.url ~ '/templates/partials/svg/' ~ item.slug | lower ~ '.svg.twig' %} <div><span class="condensed"> {{ item.slug }} </span></div></a>
                    </div>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
        <div class="clearfix"></div>
      </div>
    </section>
		<div class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
      {% include 'pagebuilder.twig' %}
		</div>
	</div><!-- /content-wrapper -->
{% endblock %}