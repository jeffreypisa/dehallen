{% if item.slider|length > 0 %}
  <div id="slider" class="mod-slider carousel carousel-fade d-none d-md-block {% if item.narrowcasting %} d-block narrowcasting {% endif %}" data-ride="carousel" data-interval="8000">
    {% if item.slider|length > 1 %}
      <div class="indicators">
        <div class="container-fluid">
          <ol class="carousel-indicators">
            {% set slidenr = 0 %}
            {% for slide in special_today %}
              <li data-target="#slider" data-slide-to="{{ slidenr }}" class="{% if slidenr == 0 %} active {% endif %}"></li>
              {% set slidenr = slidenr + 1 %}
            {% endfor %}
            {% for slide in item.slider %}
              <li data-target="#slider" data-slide-to="{{ slidenr }}" class="{% if slidenr == 0 %} active {% endif %}"></li>
              {% set slidenr = slidenr + 1 %}
            {% endfor %}
          </ol>
        </div>
      </div>
    {% endif %}
    <div class="carousel-inner">
      {% set slidenr = 0 %}
      {% for slide in special_today %}
        <a href="{{ slide.link }}" class="carousel-item slide {% if slidenr == 0 %} active {% endif %}" style="background-image: url({{ TimberImage(slide.afbeelding) }})">
          <div class="content">
            <div class="container-fluid">
              <h2>{{ slide.title }}</h2>
              {% if slide.type_evenement %}
                <div class="datetime">{{ slide.type_evenement | lower }} </div>
              {% endif %}
              <div class="datetime">
                {{ slide.custom.datum|date("l d F") }}
              </div>
              <div class="datetime">
                {{ slide.custom.begintijd|date("H:s") }}
              </div>
              <div class="locatie condensed">
                <div class="container-fluid">
                  <div class="location">
                  {% set locatie = slide.get_field('locatie') %}
                  <span class="icon"> <i class="fal fa-map-marker-alt"></i> </span> {{ locatie }}
                </div>
                </div>
              </div>
            </div>
          </div>
        </a>
        {% set slidenr = slidenr + 1 %}
      {% endfor %}
      {% for slide in item.slider %}
      
        {% set evenementdata = TimberPost(slide.slide.custom.evenement|first) %}
        
        
        <a href="{{ evenementdata.link }}" class="carousel-item slide {% if slidenr == 0 %} active {% endif %}" style="background-image: url({{ TimberImage(evenementdata.afbeelding) }})">
          <div class="content">
            <div class="container-fluid">
              <h2>{{ evenementdata.title }} </h2>
              {% if evenementdata.type_evenement %}
                <div class="datetime">{{ evenementdata.type_evenement | lower }} </div>
              {% endif %}
              <div class="datetime">
                {{ slide.slide.datum|date("l d F") }}
              </div>
              <div class="datetime">
                {{ slide.slide.begintijd|date("H:s") }}
              </div>
              <div class="locatie condensed">
                <div class="container-fluid">
                  <div class="location">
                  {% set locatie = evenementdata.get_field('locatie') %}
                  <span class="icon"> <i class="fal fa-map-marker-alt"></i> </span> {{ locatie }}
                </div>
                </div>
              </div>
            </div>
          </div>
        </a>
        {% set slidenr = slidenr + 1 %}
      {% endfor %}
    </div>
    <a class="carousel-control-prev" href="#slider" role="button" data-slide="prev">
      <img src="{{ theme.link ~ '/assets/images/chevron.svg' }}" alt="left">
      <span class="sr-only">Vorige</span>
    </a>
    <a class="carousel-control-next" href="#slider" role="button" data-slide="next">
      <img src="{{ theme.link ~ '/assets/images/chevron.svg' }}" alt="right">
      <span class="sr-only">Volgende</span>
    </a>
  </div>
{% endif %}