{% for item in post.get_field('week') %}
  {% if item.the_day == day_filter %}
    <div class="col-md-10">
      <a href="{{ post.link }}" class="tease tease-{{post.post_type}} condensed" id="tease-{{post.ID}}">
        {{ post.title }} .... TOT {{ item.close }}
      </a>
    </div>
  {% endif %}
{% endfor %}