{% block html_head_container %}
  {% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

  <body class="{{body_class}}" data-template="base.twig">
    {% include 'mobilemenu.twig' %}
    
		<header class="header {% if fn('is_front_page') %} {% else %} on{% endif %}" >
			{% block header %}
			  <div class="container">
  				<div class="logo" role="banner">
  					<a class="logo-link" href="{{site.url}}" rel="home">
  					  <img src="{{ options.logo_header }}" alt="logo" width="250" height="250">
  					</a>
  				</div>
          <a id="mobilemenubtn" class="btn-menu js-menu">
      	    <div class="lines">
        		  <span></span>
              <span></span>
              <span></span>
      	    </div>
          </a>
        </div>
  		{% endblock %}
		</header>

		<div id="content" role="main" class="content-wrapper">
			{% block content %}
				Sorry, no content
			{% endblock %}
		</div>
		{% block footer %}
      {% include 'footer.twig' %}
    {% endblock %}

	</body>
  {{ function('wp_footer') }}
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/flatpickr/4.5.1/l10n/nl.js"></script>
  
  <script>
    jQuery('input.js-datepicker').flatpickr(
      {
        dateFormat: "d/m/Y",
        disableMobile: "true",
        {% if lang == 'nl' %}
          "locale": "nl"
        {% endif %}
      }
    ); 
    jQuery('input.js-timepicker').flatpickr(
      {
        enableTime: true,
        noCalendar: true,
        time_24hr: true,
        dateFormat: "H:i",
        disableMobile: "true"
      }
    );   
    
	
		jQuery( document ).ready(function() {
			jQuery(".js-now").click();    	
		});
	    
  </script>
</html>